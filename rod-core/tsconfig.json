{
	"compilerOptions": {
		"strict": true,
		"rootDir": ".",
		"baseUrl": ".",
		"allowJs": true,
		"outDir": "dist",
		"sourceMap": true,
		"target": "ESNext",
		"module": "ESNext",
		"alwaysStrict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["node_modules/@types", "src/types"],
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", ".eslintrc.cjs", "scripts/**/*.js"],
	"exclude": ["node_modules", "dist"]
}
